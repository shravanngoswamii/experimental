---
// src/pages/index.astro
// This is the main homepage that assembles all the components.

// Import all the components
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSlider from '../components/HeroSlider.astro';
import Introduction from '../components/Introduction.astro';
import Services from '../components/Services.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import Footer from '../components/Footer.astro';
import CallToAction from '../components/CallToAction.astro';

// SEO variables for the Layout component
const pageTitle = "HomeTech Washer Repair | Washing Machine Service in Mumbai";
const pageDescription = "Same-day washing machine repair in Mumbai, Thane & Navi Mumbai. Front-load & top-load experts. Genuine parts. 90-day warranty. Book now!";

---

<Layout title={pageTitle} description={pageDescription}>
	<Header />
	<main>
		<HeroSlider />
		<Introduction />
		<Services />
		<CallToAction />
		<WhyChooseUs />
	</main>
	<Footer />
</Layout>
